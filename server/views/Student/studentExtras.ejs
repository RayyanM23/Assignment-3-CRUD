<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Book Database-->
<div class="wrapper">
    <br>
    <div class="button-container">
        <span class="buttons-left">
            <a href="/students" class="btn btn-primary" role="button">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </span>
        <span class="buttons-right">
            <a href="/students/edit/<%= Student._id %>" class="btn btn-primary mx-2">
                <i class="fa-solid fa-pencil"></i> Edit
            </a>
            <!-- Modal is used in my code for the delete confirmation message -->
            <!-- Button to trigger modal -->
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= Student._id %>">
                <i class="fa-solid fa-trash"></i> Delete
            </button>
        </span>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal<%= Student._id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteModalLabel<%= Student._id %>" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="deleteModalLabel<%= Student._id %>">Delete Student Profile Confirmation</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="fa-solid fa-trash fa-3x"></i>
                    <br><br>
                    <h6>Are you sure you want to delete the profile for <%= Student.firstName %> <%= Student.lastName %>?</h6>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="/students/delete/<%= Student._id %>" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="infoBlock">
        <h2>Details for <%= Student.firstName %> <%= Student.lastName %></h2>
        <div class="info">
            <span class="label">Program:</span>
            <span class="value"><%= Student.Program %></span>
        </div>
        <div class="info">
            <span class="label">Degree:</span>
            <span class="value"><%= Student.Degree %></span>
        </div>
        <div class="info">
            <span class="label">GPA:</span>
            <span class="value"><%= Student.GPA %></span>
        </div>
        <div class="info">
            <span class="label">Fees Due:</span>
            <span class="value"><%= Student.feesDue %></span>
        </div>
        <div class="info">
            <span class="label">Additional Comments:</span>
            <span class="value"><%= Student.addComment %></span>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>